<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.TwoFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal" android:padding="16dp">

        <TextView
        android:id="@+id/modeStatusTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="현재 모드: 고령자 모드 (0)"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_marginBottom="30dp"/>

            <RadioGroup
                android:id="@+id/modeRadioGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/elderlyModeRadioButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="20dp"
                    android:checked="true"
                    android:text="고령자 모드 (0)"
                    android:textSize="18sp" />

                <RadioButton
                    android:id="@+id/guardianModeRadioButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="보호자 모드 (1)"
                    android:textSize="18sp" />
            </RadioGroup>

        <!--하드웨어로 데이터 전송-->
        <Button
            android:id="@+id/sendModeButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="저장하기"
            android:layout_marginTop="50dp"/>
    </LinearLayout>

</FrameLayout>