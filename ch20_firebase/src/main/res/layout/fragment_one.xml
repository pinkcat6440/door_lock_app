<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9F9F9" tools:context=".fragments.OneFragment"> <ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="false"
    android:paddingBottom="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"> <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:paddingTop="20dp"
        android:paddingBottom="20dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="시스템 제어"
            android:textSize="32sp"
            android:textStyle="bold"
            android:textColor="#1D1D1F"
            android:layout_marginBottom="5dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="도어락의 현재 상태 및 모드를 변경합니다."
            android:textSize="18sp"
            android:textColor="#6E6E73" />
    </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp"
            app:cardElevation="4dp"
            android:layout_marginBottom="20dp"
            app:cardBackgroundColor="#FFFFFF"> <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="25dp"
            android:gravity="center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="현재 동작 모드"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#1D1D1F"
                android:layout_marginBottom="10dp"/>

            <LinearLayout
                android:id="@+id/currentModeStatusLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:padding="15dp"
                android:background="@drawable/rounded_green_bg"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="25dp">
                <ImageView
                    android:id="@+id/modeStatusIcon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_check_circle"
                    app:tint="#34C759"
                    android:layout_marginEnd="8dp"/>
                <TextView
                    android:id="@+id/modeStatusTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="보안 모드 (얼굴 인식)"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#34C759" />
            </LinearLayout>

            <TextView
                android:id="@+id/modeDescriptionTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="스위치를 누르면 얼굴 인식을 통해 문이 열립니다."
                android:textSize="16sp"
                android:textColor="#6E6E73"
                android:gravity="center"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E5E5E5"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="30dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="모드 변경"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#1D1D1F"
                android:layout_marginBottom="15dp"/>

            <Spinner
                android:id="@+id/modeSelectSpinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="48dp"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:spinnerMode="dropdown"
                android:entries="@array/mode_options" />

            <Button
                android:id="@+id/applySettingsButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="설정 적용"
                android:textSize="17sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:backgroundTint="#007AFF"
                android:padding="15dp"
                android:layout_marginTop="20dp"
                app:cornerRadius="12dp"/>

        </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>

</FrameLayout>